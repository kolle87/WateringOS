@namespace WateringOS_4_0.Pages

@using Syncfusion.Blazor.SplitButtons
@using Syncfusion.Blazor.Inputs
@using Syncfusion.Blazor.Buttons

<h6>Watering Days</h6>
<SfButtonGroup Mode="SelectionMode.Multiple" CssClass="e-outline e-vertical">
    <ButtonGroupButton @bind-Selected="@Globals.Preferences.Plants[PlantID].Monday">Monday</ButtonGroupButton>
    <ButtonGroupButton @bind-Selected="@Globals.Preferences.Plants[PlantID].Tuesday">Tuesday</ButtonGroupButton>
    <ButtonGroupButton @bind-Selected="@Globals.Preferences.Plants[PlantID].Wednesday">Wednesday</ButtonGroupButton>
    <ButtonGroupButton @bind-Selected="@Globals.Preferences.Plants[PlantID].Thursday">Thursday</ButtonGroupButton>
    <ButtonGroupButton @bind-Selected="@Globals.Preferences.Plants[PlantID].Friday">Friday</ButtonGroupButton>
    <ButtonGroupButton @bind-Selected="@Globals.Preferences.Plants[PlantID].Saturday">Saturday</ButtonGroupButton>
    <ButtonGroupButton @bind-Selected="@Globals.Preferences.Plants[PlantID].Sunday">Sunday</ButtonGroupButton>
</SfButtonGroup>

<div style="border-bottom-width: thin;border-bottom-color: lightgrey;border-bottom-style: solid;margin-top: 1rem;"></div>
<h6 style="margin-top: 0.25rem">Watering Times</h6>

<SfButtonGroup Mode="SelectionMode.Multiple" CssClass="e-outline e-vertical">
    <ButtonGroupButton @bind-Selected="@Globals.Preferences.Plants[PlantID].Morning">Morning</ButtonGroupButton>
    <ButtonGroupButton @bind-Selected="@Globals.Preferences.Plants[PlantID].Noon">Noon</ButtonGroupButton>
    <ButtonGroupButton @bind-Selected="@Globals.Preferences.Plants[PlantID].Evening">Evening</ButtonGroupButton>
</SfButtonGroup>

<div style="border-bottom-width: thin;border-bottom-color: lightgrey;border-bottom-style: solid;margin-top: 1rem;"></div>
<h6 style="margin-top: 0.25rem">Volume</h6>
<p style="margin: 0px 0px 0px 20%; font-size: small;">@Globals.Preferences.Plants[PlantID].Volume ml</p>
<SfSlider Min="200" Max="2500" Step="100" @bind-Value="@Globals.Preferences.Plants[PlantID].Volume" Type="SliderType.MinRange">
</SfSlider>

<div style="border-bottom-width: thin;border-bottom-color: lightgrey;border-bottom-style: solid;margin-top: 1rem;"></div>
<h6 style="margin-top: 0.25rem">Adaptive</h6>
<div style="margin-left: 20%">
    <SfSwitch @bind-Checked="@Globals.Preferences.Plants[PlantID].RainReduction"></SfSwitch>
    <label style="padding: 0px 0px 0px 1rem">Rain Reduction</label>
</div>
<div style="margin-left: 20%">
    <SfSwitch @bind-Checked="@Globals.Preferences.Plants[PlantID].ConsiderSoil"></SfSwitch>
    <label style="padding: 0px 0px 0px 1rem">Consider Soil</label>
</div>
<div style="margin-left: 20%">
    <SfSwitch @bind-Checked="@Globals.Preferences.Plants[PlantID].Cooling"></SfSwitch>
    <label style="padding: 0px 0px 0px 1rem">Cooldown</label>
</div>

