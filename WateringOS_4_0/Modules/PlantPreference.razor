<style>

.e-btn-group {
    margin-left: 20%;
    width: 80%;
}

.e-btn:hover {
    background-color: lightgray !important;
}

.e-btn-group .e-btn:focus, .e-btn-group input:focus+label.e-btn, .e-css.e-btn-group .e-btn:focus, .e-css.e-btn-group input:focus+label.e-btn {
    background-color: white;
    border-color: #6c757d;
    color: #fff;
    outline: #6c757d 0 solid;
    outline-offset: 0;
    box-shadow: 0 0 0 0.25em rgba(108,117,125,0.5);
    box-shadow: none;
    outline-color: inherit;
}

.e-btn-group .e-btn:focus input:checked, .e-btn-group input:checked+label.e-btn, .e-css.e-btn-group .e-btn:focus, .e-css.e-btn-group input:checked+label.e-btn {
    background-color: lightgreen;
    border-color: #6c757d;
    color: #fff;
    outline: #6c757d 0 solid;
    outline-offset: 0;
    box-shadow: 0 0 0 0.25em rgba(108,117,125,0.5);
    box-shadow: none;
    outline-color: inherit;
}

.e-btn {
    background-color: white;
    color: black !important;
    box-shadow: 0 !important;
}

.e-control-wrapper.e-slider-container.e-horizontal {
    height: 14px;
    width: 100%;
}

.e-switch-wrapper .e-switch-handle, .e-css.e-switch-wrapper .e-switch-handle {
    top: 5px;
}

.e-switch-wrapper .e-switch-inner, .e-css.e-switch-wrapper .e-switch-inner {
    top: 3px;
}

</style>

@code {
    [Parameter]
    public byte PlantID { get; set; } = 0;
 }
